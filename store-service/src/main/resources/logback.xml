<configuration scan="true" scanPeriod="5 seconds" >

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{dd.MM.yy HH:mm:ss} %cyan([%thread]) %highlight(%-5level) %logger{64} - %msg %n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>
